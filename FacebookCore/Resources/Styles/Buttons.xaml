<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.com/icons/"
                    >
    <Style x:Key="BtnBaseStyle" TargetType="ButtonBase" >
        <Setter Property="Background" Value="White" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="PrimaryBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="FontWeight" Value="Bold" />
       
    </Style>

    <Style x:Key="SecondaryBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Red"/>
    </Style>
    
    
</ResourceDictionary>